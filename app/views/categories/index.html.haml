%h1 listing categories

%table.admintable
  %thead
    %tr
      %th Name
      %th Hidden
      %th
  %tbody{ :class => "sorts", :data => { :update_url => sort_categories_url }}
    - @categories.each do |category|
      = content_tag_for :tr, category do
        %td= category.name
        %td= category.hidden
        %td{ :class => "actions"}
          = link_to 'Edit', edit_category_path(category)
          = link_to 'Destroy', category, method: :delete, class: "delete_btn", data: {confirm: 'Are you sure?', remote: true }

= link_to 'New', new_category_path, :class => "push_4 grid_1 btn"