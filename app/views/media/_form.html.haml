= form_for(@medium) do |f|
  - if @medium.errors.any?
    #error_explanation
      %h2
        = pluralize(@medium.errors.count, "error")
        prohibited this medium from being saved:
      %ul
        - @medium.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, :class => "grid_1 alpha"
    = f.text_field :name, :class => "grid_4 omega"

  .actions
    = f.submit :class => "grid_1 push_4"