<!DOCTYPE html>
<html>
<head>
  <title>JerkTest</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="container_5 clearfix" id="pgheader">
  <nav class="grid_5" id="main-navigation">
    <ul>
      <li><%= link_to 'Contact', contact_path %></li>
      <%= render '/categories/categories' %>
      <li><%= link_to 'Home', root_path %></li>
    </ul>
  </nav>
</header>
<div role="main" class="container_5 clearfix">
  <%= yield %>
</div>

<% if session[:user_id] %>
<nav id="admin">
  <ul>
    <li>Add Content
      <ul>
        <li><%= link_to 'Blog Entry', new_blog_path %></li>
        <li><%= link_to 'New Artwork', new_artwork_path %></li>
      </ul>
    </li>
    <li>Manage Content
      <ul>
        <li><%= link_to 'Blog', blogs_path %></li>
        <li><%= link_to 'Artwork', artworks_path %></li>
        <li><%= link_to 'Categories', categories_path %></li>
        <li><%= link_to 'Media', media_path %></li>
      </ul>
    </li>
    <li>Settings
      <ul>
        <li><%= link_to 'Users', users_path %></li>
      </ul>
    </li>
    <li><%= link_to 'Logout', logout_path, method: :delete %></li>
  </ul>
</nav>
<% end %>

