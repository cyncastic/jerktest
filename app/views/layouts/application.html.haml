!!! 5
%html
  %head
    %title JerkTest
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header{ :class => "container_5 clearfix", :id => "pgheader" }
      %nav{ :class => "grid_5", :id => "main-navigation"}
        %ul
          %li= link_to 'Contact', contact_path
          = render '/categories/categories'
          %li= link_to 'Home', root_path

    %div{ :role => "main", :class => "container_5 clearfix" }
      = yield

    - if session[:user_id]
      %nav{ :id => "admin"}
        %ul
          %li
            Add Content
            %ul
              %li= link_to 'Blog Entry', new_blog_path
              %li= link_to 'New Artwork', new_artwork_path
          %li 
            Manage Content
            %ul
              %li= link_to 'Blog', blogs_path
              %li= link_to 'Artwork', artworks_path
              %li= link_to 'Categories', categories_path
              %li= link_to 'Media', media_path
          %li
            Settings
            %ul
              %li= link_to 'Users', users_path
          %li= link_to 'Logout', logout_path, method: :delete