!!! 5
%html
  %head
    %title Jerkface NYC
    %meta{ name: 'viewport', content: 'width=840, initial-scale=1, user-scalable=no' }
    %link{ href: 'http://fonts.googleapis.com/css?family=Pontano+Sans', rel: 'stylesheet', type: 'text/css' }
    = stylesheet_link_tag    "application", media: 'all'
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .container
      %header.main
        %h1 Jerkface
        %nav.main
          %ul
            %li= link_to 'Store', 'http://jerkface.bigcartel.com/'
            %li= link_to 'Contact', contact_path, class: cp(contact_path)
            = render '/categories/categories'
            %li= link_to 'Blog', root_path, class: cp(root_path)

      .content
        - if notice
          %p#notice= notice
        = yield

    - if session[:user_id]
      %nav.admin
        %ul
          %li
            %a{ href: admin_path } Home
          %li
            Add Content
            %ul
              %li= link_to 'Blog Entry', new_blog_path
              %li= link_to 'Artwork', new_artwork_path
              %li= link_to 'Category', new_category_path
          %li 
            Manage Content
            %ul
              %li= link_to 'Blog', blogs_path
              %li= link_to 'Artworks', artworks_path
              %li= link_to 'Categories', categories_path
          %li
            Settings
            %ul
              %li= link_to 'Users', users_path
          %li= link_to 'Logout', logout_path, method: :delete       