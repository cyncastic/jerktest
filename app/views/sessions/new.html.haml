%section.admin
  %h1 log in
  - if flash[:alert]
    .alert= flash[:alert]
  = form_tag do
    .field
      = label_tag :name, 'Name'
      = text_field_tag :name, params[:name]
    .field
      = label_tag :password, 'Password'
      = password_field_tag :password, params[:password]
    .actions
      = submit_tag 'Log In'