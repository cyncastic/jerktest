<h1>Listing artworks</h1>
<table>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Category</th>
    <th>Medium</th>
    <th>Size</th>
    <th>Year</th>
    <th></th>
  </tr>
<% @artworks.each do |artwork| %>
  <tr>
    <td><%= image_tag artwork.img_url_url(:icon).to_s %></td>
    <td><%= artwork.title %></td>
    <td><%= artwork.category.name %></td>
    <td><%= artwork.medium %></td>
    <td><%= artwork.length %> x <%= artwork.width %></td>
    <td><%= artwork.year %></td>
    <td class="actions">
        <%= link_to 'Show', artwork %>
        <%= link_to 'Edit', edit_artwork_path(artwork) %>
        <%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<%= link_to 'New Artwork', new_artwork_path, :class => "push_4 grid_1 btn" %>
