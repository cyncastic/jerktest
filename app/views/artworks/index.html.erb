<h1>Listing artworks</h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Category</th>
    <th>Medium</th>
    <th>Dimensions</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artworks.each do |artwork| %>
  <tr>
    <td><%= image_tag artwork.img_url_url(:icon).to_s %></td>
    <td><%= artwork.title %></td>
    <td><%= artwork.category.name %></td>
    <td><%= artwork.medium %></td>
    <td><%= artwork.length %> x <%= artwork.width %></td>
    <td><%= artwork.year %></td>
    <td><%= link_to 'Show', artwork %></td>
    <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
    <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Artwork', new_artwork_path, :class => "btn" %>
