= form_for(@menu_link) do |f|
  - if @menu_link.errors.any?
    #error_explanation
      #h2= pluralize(@menu_link.errors.count, "error") + 'prohibited this menu_link from being saved:'
      %ul
        -@menu_link.errors.full_messages.each do |msg|
          li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :show
    = f.check_box :show
  .actions
    = f.submit class: 'btn'

